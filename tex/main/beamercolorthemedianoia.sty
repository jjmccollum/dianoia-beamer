\mode<presentation>

% Theme colors
\RequirePackage{color}
\definecolor{Charcoal120}{RGB}{37,35,32} % default body copy (main text)
\definecolor{Charcoal100}{RGB}{61,57,53}
\definecolor{Black80}{RGB}{116,116,116} % for slightly less emphasis
\definecolor{Black40}{RGB}{204,204,204}
\definecolor{Black20}{RGB}{238,238,238}
\definecolor{Black10}{RGB}{250,250,250}
\definecolor{Red100}{RGB}{237,12,0} % for hyperlinks
\definecolor{Red120}{RGB}{208,10,0}
\definecolor{Red80}{RGB}{241,80,71}
\definecolor{Red60}{RGB}{245,124,117}
\definecolor{Red40}{RGB}{248,167,163}
\definecolor{Red20}{RGB}{252,211,209}
\definecolor{Purple100}{RGB}{60,16,83} % secondary body copy (also used for blockquotes, refs in the text other than links)
\definecolor{Purple115}{RGB}{45,12,62}
\definecolor{Purple120}{RGB}{38,11,52}
\definecolor{Purple80}{RGB}{100,48,117}
\definecolor{Purple60}{RGB}{138,112,152}
\definecolor{Purple40}{RGB}{177,159,186}
\definecolor{Purple20}{RGB}{216,207,221}
\definecolor{Sand}{RGB}{232,227,219}

% Set colors for elements of page layout
\setbeamercolor{title page header}{fg=white} % main title block
\setbeamercolor{titlelike}{fg=white} % anything else that falls under the rubric of title
\setbeamercolor{section title}{fg=white} % section title for section frames
\setbeamercolor{frametitle}{fg=Charcoal120} % frame titles in content slides
\setbeamercolor{framesubtitle}{fg=Black80} % frame subtitles in content slides
\setbeamercolor{section in head/foot}{fg=Charcoal100} % current section name printed in outer margin of content slides
\setbeamercolor{page number in head/foot}{fg=Charcoal100} % current page number printed in outer margin of content slides
\setbeamercolor{separation line}{} % disable separation lines
\setbeamercolor{fine separation line}{} % disable separation lines
\setbeamercolor{normal text}{fg=Charcoal120} % for normal text in slides
\setbeamercolor{structure}{fg=Red100} % bullets, enumerations, etc.
\setbeamercolor{block body}{bg=Purple20,fg=Purple100} % block body
\setbeamercolor{block body alerted}{bg=Red20,fg=Charcoal120} % alert block body
\setbeamercolor{block body example}{bg=Sand,fg=Charcoal100} % example block body
\setbeamercolor{block title}{bg=Purple100,fg=white} % block title bar
\setbeamercolor{block title alerted}{use={normal text,alerted text},bg=Red100,fg=white} % alert block title bar
\setbeamercolor{block title example}{use={normal text,example text},bg=Black80,fg=white} % example block title bar
\setbeamercolor{verse}{fg=Black80} % breakout verse in content slides
\setbeamercolor{quote}{fg=Black80} % breakout quote in content slides
\setbeamercolor{quotation}{fg=Black80} % breakout quotation in content slides
\setbeamercolor{background canvas}{bg=white}
\setbeamercolor{pagenumber}{fg=Charcoal100} % slide numbers

\mode
<all>